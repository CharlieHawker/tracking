
  <%@teams.each do |team| %>
    <% if Robot.find_by_team_id(team.id) != nil %>
      <%if @tabteams.index(team.id.to_s) != nil %>      
      	    
        <div><b> Robots of <%= team.name %></b></div>
       
        <% @tabrobots = Robot.where(team_id: team.id)%>
        <% @tabrobots.each do |robot| %>
          <% if robot.tracker_id != nil %>
            <input type="checkbox" name="robot<%= robot.id %>" id="<%= robot.id %>"><img src="/icons/medium<%=robot.tracker_id.to_s%>.png"/> <%= robot.name %><br>
          <% end %> 
        <% end %> 
        <div>&nbsp;</div>
      <%else%>
        <div>&nbsp;</div>
      <%end%>
    <%end%> 
	<%end%>


<button id="choose_missions" type="button">Select a mission</button> 




