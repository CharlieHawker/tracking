<% provide(:title, "Members | Edit") %>
<h1>Editing Member</h1>
<% if sign_in? && (is_admin? || @member.id == cookies.signed[:user_id]) %>

<%= render 'form' %>

<%= link_to 'Show', @member %> |

	<% if heIsLeader?(@member.name) %>
		<%= link_to 'Delete', @member, method: :delete, data: { confirm: 'Delete this account ? WARNING !! You are a team leader, if you delete your account you will destroy your team as well' } %> |
	<% else %>
		<%= link_to 'Delete', @member, method: :delete, data: { confirm: 'You want to destroy this account ?' }%> |
	<% end %>

<% else %>
	<h2> You cannot access this page. </h2>

<% end %>
<%= link_to 'Back to index', members_path %>
