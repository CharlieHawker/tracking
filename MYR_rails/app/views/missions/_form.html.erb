<%= form_for(@mission) do |f| %>
  <% if @mission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mission.errors.count, "error") %> prohibited this mission from being saved:</h2>

      <ul>
      <% @mission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
    <div class="field">
    <%= f.label :edition_id %>
    <%= f.text_field :edition_id %>
  </div>
  <br>
    <p>Please select start and end times in UTC +00</p>
    <div class="field">
    <%= f.label :start %>
    <%= f.datetime_select :start %>
  </div>
  <br>
  <div class="field">
    <%= f.label :end %>
    <%= f.datetime_select :end %>
  </div>
  <br>
  
  <div class="field">
    <%= f.label :mtype %>
    <%= f.select :mtype, ['Race', 'TriangularCourse', 'StationKeeping', 'AreaScanning'] %>
  </div>
  <br>

  <div class="field">
    <%= f.label :category %>
    <%= f.select :category, ['Sailboat', 'MicroSailboat'] %>
  </div>
  <br>

  Fill this only if the mission is the Race.
  <div class="field">
    <%= f.label :startOfRace %>
    <%= f.text_field :startOfRace %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
