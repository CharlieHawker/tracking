<% provide(:title, "Scores | Station Keeping") %>
<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag 'layout/styles/dataTables.css', media: 'all', 'data-turbolinks-track' => true %>
<%= javascript_include_tag 'jquery.dataTables', 'data-turbolinks-track' => true %>

<!-------------------- Station Keeping ---------------------->
<center><h1>Listing Station Keeping Scores</h1>
From <%= @m.start%> To <%= @m.end%>

</center>
<br />
<h2>Listing Station Keeping Category Sailboats' Scores </h2>
<table id="datatable-score-stationkeeping-sailboat" class="dataTable display" >
  <thead>
    <tr >
        <th >id</th>
        <th >Attempt</th>
        <th >Timecost</th>
        <th >Rawscore</th>
				<th >Human Intervention (Not Collision avoidance)</th>
				<th >AIS</th>
				<th>Calculated time</th>
			<% if sign_in? %>
				<th> Options</th>			
			<% end %>
    </tr>
  </thead>
  <tbody>
		<% @sail_scores.each do |score| %>
			<% if score != nil %>
			<tr>
		 		<td><%= link_to score.id, score %></td>
		   	<td><%= score.attempt_id%>&nbsp;&nbsp;<%= score.attempt.name%></td>
				<td><%= score.timecost %></td>
				<td><%= score.rawscore %></td>
				<td><%= score.humanintervention %></td>	
				<td><%= score.AIS %></td>	
				<td><%= score.datetimes %></td>  
				<% if sign_in? %>
		      <% if is_admin? %>
		        <td><%= link_to 'Edit', edit_score_path(score) %> <%=' | '%>
		        <%= link_to 'Delete', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      <% end %>
		    <% end %>
			</tr>  
			<% end %>
		<% end %>
  </tbody>
</table>
<br /><br />

<br />
<h2>Listing Station Keeping Category MicroSailboats' Scores </h2>
<table id="datatable-score-stationkeeping-microsailboat" class="dataTable display" >
  <thead>
    <tr >
        <th >id</th>
        <th >Attempt</th>
        <th >Timecost</th>
        <th >Rawscore</th>
				<th >Penalty</th>
				<th >PenaltyDescription</th>
				<th>Calculated time</th>
			<% if sign_in? %>
				<th> Options</th>			
			<% end %>
    </tr>
  </thead>
  <tbody>
		<% @microsail_scores.each do |score| %>
			<tr>
		 		<td><%= link_to score.id, score %></td>
		   	<td><%= score.attempt_id%>&nbsp;&nbsp;<%= score.attempt.name%></td>
				<td><%= score.timecost %></td>
				<td><%= score.rawscore %></td>
			
				<td><%= score.datetimes %></td>  
				<% if sign_in? %>
		      <% if is_admin? %>
		        <td><%= link_to 'Edit', edit_score_path(score) %> <%=' | '%>
		        <%= link_to 'Delete', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      <% end %>
		    <% end %>
			</tr>  
	
		<% end %>
  </tbody>
</table>

<%= link_to 'New Score', new_score_path %>

<script>
$(document).ready( function () {
  $('#datatable-score-stationkeeping-sailboat').DataTable({
		paging: true
	});
	$('#datatable-score-stationkeeping-microsailboat').DataTable({
		paging: true
	});

} );
</script>
