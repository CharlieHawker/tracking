<div class="row">
<%= form_for(@score) do |f| %>
  <% if @score.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@score.errors.count, "error") %> prohibited this score from being saved:</h2>
      <ul>
      <% @score.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="content">
  <section class="round">
    <% flash.each do |key, value| %>
      <div id="monflash" class="flash <%= key %>"><%= value %></div>
    <% end %>
  </section>
  <%= yield %>
  </div>

    
    <%= f.label :TimeCost %>
    <%= f.number_field :timecost %> seconds

    <%= f.label :RawScore %>
    <%= f.number_field :rawscore %> 

		<%= f.label :Penalty %>
    <%= f.number_field :penalty %> 

		<%= f.label :penalty_description, "Penalty Description" %>
    <%= f.text_area :penalty_description %> 

		<%= f.hidden_field :datetimes, :value => Time.now %>
 
  
  <p>
  <div class="actions">
    <%= f.submit %>
  </div>
  </p>
<% end %>
</div>
