<h2>Listing Triangular Category Sailboats' Scores </h2>
Finished <%= @microsail_scores.length%> / All triangular course attempts <%= @microsail_atts.length%>

<table id="datatable-score-triangular-microsailboat" class="dataTable display" >
  <thead>
    <tr >
        <th >Rank</th>
				<th>Team</th>
        <th >Robot</th>
				<th> Attempt</th>
        <th >Timecost</th>
        <th >Rawscore</th>
				<th >Human Intervention <br />(Not Collision avoidance)</th>
				<th >AIS</th>
				<th>Calculated time</th>
			<% if sign_in? %>
				<th> Options</th>			
			<% end %>
    </tr>
  </thead>
  <tbody>
		<% @microsail_scores.each do |score| %>
			<% if score != nil %>
			<tr>
		 		<% if score.attempt.robot.finalrank!=nil%>
					<% if score.id== score.attempt.robot.bestTriangularscoreId%>
		 				<td><%= score.attempt.robot.triangularRank%></td>
					<% else %>
						<td></td>
					<% end %>
				<% else %>
					<td>#</td>
				<% end %>
				<td><%= score.attempt.robot.team.name %></td>
		   	<td><%= score.attempt.robot.name %></td>
				<td><%= score.attempt_id%>&nbsp;&nbsp;<%= score.attempt.name%></td>
				<td><%= score.timecost %></td>
				<td><%= score.rawscore %></td>
				<td><%= score.humanintervention %></td>	
				<td><%= score.AIS %></td>	
				<td><%= score.datetimes %></td>  
				<% if sign_in? %>
		      <% if is_admin? %>
		        <td><%= link_to 'Edit', edit_score_path(score) %> <%=' | '%>
		        <%= link_to 'Delete', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		      <% end %>
		    <% end %>
			</tr>  
			<% end %>
		<% end %>
  </tbody>
</table>
<br /><br />



