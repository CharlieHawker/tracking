<p id="notice"><%= notice %></p>

<div id="robot-container" style='width: 100%; height: 70%'>
	<% robs=@team.robots%>
	<% robs.each do |rob|%>
	
			<div class="robot-show-team" >
			  <div class="top team-robot">
			    <h2>Robot</h2>
			  </div>
			  <ul>
			    <li><strong>Name:</strong> <%= rob.name%></li>
					<li><strong>Category:</strong> <%= rob.category%></li>
			    
			  </ul>
			  <hr>
			  <ul>
					
			    <li><strong>Participated Missions:</strong> <br />
					
						
						<% if rob.missions.length==0%>
							Your robot do not participate any mission.
						<% else %>
							
							<% rob.missions.each do |m|%>
								<li><%= m.name%></li>							
							<% end %>
							
						<% end %>	
								
					</li>
				
					
			  </ul> 
				
			</div>
		
	<% end %>
    <!--div class="robot-show-team featured"-->
</div>

<% 15.times do |n|%>
	<br />
<% end %>

