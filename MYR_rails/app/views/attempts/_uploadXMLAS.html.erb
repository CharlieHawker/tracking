
<%= form_for(:attempt) do |f| %>

  <%= f.hidden_field :uploadxml_a_id, value:@a.id %>
	<%= f.hidden_field :upload_timestamp, value:Time.now %>
  <div class="field">
    <font color="blue">Upload area scanning xml file</font><br />
		<% if @a.uploadxml.file != nil %>
			<i class="icon-file-text-alt"></i>
			<% filename = @a.uploadxml.file.original_filename %>
			<!--Rails.root+"/public"+desiredfilename -->
			<% fullname = @a.uploadxml.file.file %>
			<% ind_s=Rails.root.to_s.length+7 %>
			<%= link_to filename, fullname[ind_s,fullname.length] %><br />
			Uploaded time: <%= @a.upload_timestamp %>
		<% else %>
			no file uploaded
		<% end %>
    <%= f.file_field :uploadxml %>
  </div>
 
  <div class="actions">
    <%= f.submit "Save"%>
  </div>
	
<% end %>
