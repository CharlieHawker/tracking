	<% if is_leader? || is_admin? %>
		<%= link_to 'New Robot', new_robot_path %>
	<% end %>
<% end %>
<table>
  <thead>
    <tr>
	
      <th>Name
		<!--a href= robots ><button id="sortbuttonT" name="NameRbis" onclick="myFunctionSort(this.name)" ></button></a-->
		<a href= robots ><i id="sortbuttonT" name="NameRbis"  class="icon-sort-by-alphabet" onclick="myFunctionSort(this.name)" ></a>
		<a href= robots ><button id="sortbuttonD" name="NameR" onclick="myFunctionSort(this.name)" ></button></a></th>	
	  
	  
      <th>Category
		<a href= robots ><button id="sortbuttonT" name="CategoryRbis" onclick="myFunctionSort(this.name)" ></button></a>
		<a href= robots ><button id="sortbuttonD" name="CategoryR" onclick="myFunctionSort(this.name)" ></button></a></th>		  
	  
	  
      <th>Tracker
		<a href= robots ><button id="sortbuttonT" name="TrackerRbis" onclick="myFunctionSort(this.name)" ></button></a>
		<a href= robots ><button id="sortbuttonD" name="TrackerR" onclick="myFunctionSort(this.name)" ></button></a></th>	
	  
	  
      <th>Team
		<a href= robots ><button id="sortbuttonT" name="TeamRbis" onclick="myFunctionSort(this.name)" ></button></a>
		<a href= robots ><button id="sortbuttonD" name="TeamR" onclick="myFunctionSort(this.name)" ></button></a></th>	  

