//=require rtmap

var map
$(document).ready(function(){
	//initialization
	google.maps.event.addDomListener(window, 'load', initializeMap(map));
	$("#refresh-panel").click();
	
	//initializeMap();
	initialScroll();
	
//--------------------------------------------------------------------------------------------------

	//gather newly added coordinates or add coordinates since begining of mission

});

function getNewCoordinates(){
	$("#map-panel").on("click", "#getNewCoordinates", function() {
		alert ('new coordinate')
		$.ajax({
			type: "GET",
			url: "/gatherCoordsSince",
			data: {datetime : getLastDatetime(), trackers: getDesiredTrackers()},
			dataType: "json",
			success: function(data){
				if(data.length > 0){
					refreshWithNewMarkers2(data);
				}
			}       
		});
	});
}

	//gather newly added coordinates or add coordinates since begining of mission
function getNewTrackers(){
	$("#map-panel").on("click", "#getNewTrackers", function() {
		alert('new trackers')
		$.ajax({
			type: "GET",
			url: "/getNewTrackers",
			data: {datetime : getLastDatetime(), trackers: getKnownTrackers(), mission_id: 1},
			dataType: "json",
			success: function(data){// retrieve an array containing the not yet known trackers
				if(data.length > 0){
					saveNewKnownTracker(data);
					alert("Received data: "+data);
				}
			}       
		});
	});
}

function getLastData(){		
	 $("#map-panel").on("click", "#getLastData", function() {
  	alert('hello')
   })
}

function chooseMission(){
	$("#map-panel").on("click", "#chooseMission", function() {
		alert('choose mission')
	})
}

//when the panel is displayed
$("#map-panel").ready(function(){
	
	getLastData()
	getNewTrackers()
	getNewCoordinates()
	chooseMission()
  //for all checkboxes of tracker, on click do ...
  $("#map-panel").on("click", "input[name*='tracker']", function() {
      //get id of the checkbox
      var id = $(this).attr('id');
      //if checked
      if($(this).is(':checked')){
      	saveNewDesiredTracker(id);
      }
      //if not checked
      else{
      	removeDesiredTracker(id);
      } 

    })

});



